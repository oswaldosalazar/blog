<title>{{title}}</title>

<div class="userGreeting">
    <img src="{{user.picture}}" alt="User Picture" />
    <h5>Welcome back {{user.nickname}}</h5>
</div>

<div class="navbar navbar-default navbar-fixed-bottom">
    <a href="/logout" id="logButton" href="#" class="btn btn-default btn-lg">Log Out</a>
</div>

<div class="blogPost">
    <form action="/users/submit" method="post" class="form-horizontal">
        <fieldset>
            <legend>Log Entry</legend>
            <div class="form-group">
                <label for="postTitle" class="col-lg-2 control-label">Title</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputPostTitle" placeholder="Post Title" name="postTitle">
                </div>
            </div>
            <div class="form-group">
                <label for="textArea" class="col-lg-2 control-label">Entry</label>
                <div class="col-lg-10">
                    <textarea class="form-control" rows="3" id="textArea" placeholder="Post Entry" name="postEntry"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

