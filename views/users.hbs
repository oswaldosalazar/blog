<title>{{title}}</title>

<div class="userGreeting">
    <img src="{{user.picture}}" alt="User Picture" />
    <h5>Welcome back {{user.nickname}}</h5>
</div>


<div class="blogPost">
    <form action="/users/submit" method="post" class="form-horizontal">
        <fieldset>
            <legend>Log Entry</legend>
            <div class="form-group">
                <label for="postTitle" class="col-lg-2 control-label">Title</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputPostTitle" placeholder="Post Title" name="postTitle">
                </div>
            </div>
            <div class="form-group">
                <label for="textArea" class="col-lg-2 control-label">Entry</label>
                <div class="col-lg-10">
                    <textarea class="form-control" rows="3" id="textArea" placeholder="Post Entry" name="postEntry"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button formaction="/users/posts" class="btn btn-default">See existing entries</button>

                    <button type="submit" class="btn btn-primary">Submit new</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="chatbox panel-body">
                    <ul class="list-group" id="messages"></ul>
                    <form id="formchat" class="form-group bottom-align-text" action="">
                        <input id="message" autocomplete="off"/><button class="btn btn-default btn-xs">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="navbar navbar-default navbar-fixed-bottom">
    <a href="/logout" id="logButton" href="#" class="btn btn-default btn-lg">Log Out</a>
</div>
